<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduMaster</title>

    <link rel="stylesheet" href="~/css/shared.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login_and_registration.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cabinet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard_modal.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- НОВАЯ КРАСИВАЯ ШАПКА -->
    <header class="main-header">
        <div class="header-container">
            <div class="logo">
                <a asp-controller="Home" asp-action="Index">EduMaster</a>
            </div>

            <nav class="nav-menu">
                <a href="#home-section">Главная</a>
                <a href="#about-section">О нас</a>
                <a asp-controller="Courses" asp-action="Catalog">Услуги</a>
                <a href="#contacts-section">Контакты</a>
                <a href="#message-section">Написать сообщение</a>
            </nav>

            <div class="header-auth">
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="header-button" onclick="openDashboard()">
                        <i class="fa fa-user"></i> Личный кабинет
                    </button>

                    <form method="post" asp-controller="Home" asp-action="Logout">
                        <button type="submit" class="header-button">
                            <i class="fa fa-sign-out-alt"></i> Выйти
                        </button>
                    </form>
                }
                else
                {
                    <button class="header-button" onclick="openModal()">
                        <i class="fa fa-sign-in-alt"></i> Войти
                    </button>
                    <button class="header-button" onclick="openModal(); switchToRegister()">
                        <i class="fa fa-user-plus"></i> Регистрация
                    </button>
                }
            </div>
        </div>
    </header>

    <!-- ОСНОВНОЙ КОНТЕНТ -->
    <main class="main-content">
        @RenderBody()
    </main>

    <footer>
        <div class="footer-content">
            <p><i class="fas fa-map-marker-alt"></i> Адрес: г. Тирасполь ул. Магистральная 5</p>
            <p><i class="fas fa-phone"></i> Телефон: +373 533-4-4-4-1-3</p>
            <p><i class="fas fa-envelope"></i> Email: ttiip@mail.ru</p>
        </div>

        <div class="footer-bottom">
            &copy; @DateTime.Now.Year - EduMaster. Все права защищены.
        </div>
    </footer>

    <partial name="_LoginRegistrationPartial" />
    <partial name="_DashboardModal" />

    <button onclick="topFunction()" id="scrollTopBtn" title="Наверх">
        <i class="fas fa-arrow-up"></i>
    </button>

    <script>
        window.registerUrl = '@Url.Action("Register", "Home")';
        window.loginUrl = '@Url.Action("Login", "Home")';
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/shared_script.js" asp-append-version="true"></script>
    <script src="~/js/login_and_registration_script.js" asp-append-version="true"></script>
    <script src="~/js/home_script.js" asp-append-version="true"></script>
    <script src="~/js/write_message_script.js" asp-append-version="true"></script>
    <script src="~/js/courses_script.js" asp-append-version="true"></script>

    <script src="https://accounts.google.com/gsi/client" async defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
