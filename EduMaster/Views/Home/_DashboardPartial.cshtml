@model string

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2 class="m-0">Личный кабинет: <span class="text-primary">@Model</span></h2>
    </div>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active fw-bold" id="my-courses-tab" data-bs-toggle="tab" data-bs-target="#my-courses" type="button" role="tab">
                <i class="fa fa-book-open me-2"></i>Мои Курсы
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link fw-bold" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab">
                <i class="fa fa-cog me-2"></i>Настройки
            </button>
        </li>
    </ul>

    <div class="tab-content mt-4" id="myTabContent">
        <div class="tab-pane fade show active" id="my-courses" role="tabpanel">
            @if (ViewBag.MyCourses != null && ((List<EduMaster.Domain.ModelsDb.CourseDb>)ViewBag.MyCourses).Any())
            {
                <div class="row">
                    @foreach (var course in (List<EduMaster.Domain.ModelsDb.CourseDb>)ViewBag.MyCourses)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm border-0" style="transition:0.3s; overflow:hidden;">
                                <div class="card-header bg-success text-white fw-bold d-flex justify-content-between align-items-center">
                                    <span><i class="fa fa-check-circle me-1"></i> Вы записаны</span>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">@course.title</h5>
                                    <p class="card-text text-muted flex-grow-1" style="font-size:0.9rem;">@course.description</p>

                                    <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                                        <span class="fw-bold text-primary fs-5">@course.price.ToString("N0") ₽</span>

                                        <button class="btn btn-outline-danger btn-sm btn-remove-course" data-id="@course.Id">
                                            <i class="fa fa-trash-alt me-1"></i> Отписаться
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-white rounded shadow-sm">
                    <i class="fa fa-folder-open fa-3x text-muted mb-3"></i>
                    <h4>У вас пока нет активных курсов</h4>
                    <p class="text-muted">Перейдите в каталог, чтобы выбрать подходящее обучение.</p>
                    <a href="/Courses/Catalog" class="btn btn-primary mt-2">Перейти в каталог</a>
                </div>
            }
        </div>

        <div class="tab-pane fade" id="settings" role="tabpanel">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5>Личные данные</h5>
                    <p class="text-muted">Функционал смены пароля и редактирования профиля в разработке.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Логика кнопки "Отписаться"
    // Мы используем делегирование событий или прямой биндинг, так как это PartialView
    $('.btn-remove-course').click(function() {
        var btn = $(this);
        var id = btn.data('id');

        if(!confirm('Вы уверены, что хотите отказаться от этого курса?')) return;

        // Блокируем кнопку
        btn.prop('disabled', true);
        btn.html('<i class="fa fa-spinner fa-spin"></i>');

        $.post('/Home/RemoveCourse', { id: id }, function(res) {
            if(res.success) {
                // Перезагружаем страницу, чтобы обновить список
                location.reload();
            } else {
                alert('Ошибка при удалении');
                btn.prop('disabled', false).text('Отписаться');
            }
        });
    });
</script>