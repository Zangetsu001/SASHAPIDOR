@model EduMaster.Domain.Models.ViewModels.CoursesIndexViewModel

@{
    ViewData["Title"] = "Каталог курсов";
}

<link rel="stylesheet" href="~/css/courses.css" />

<div class="container mt-4">
    <h2 class="mb-4">Каталог курсов</h2>

    <form method="get" asp-action="Catalog" class="row g-3 mb-5 align-items-end">
        <div class="col-md-6">
            <label class="form-label">Поиск</label>
            <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Название или описание..." />
        </div>

        <div class="col-md-4">
            <label class="form-label">Категория</label>
            <select name="categoryId" class="form-select">
                <option value="">Все категории</option>
                @foreach (var cat in Model.Categories)
                {
                    // Делаем выбранной текущую категорию
                    if (Model.SelectedCategoryId == cat.Id)
                    {
                        <option value="@cat.Id" selected>@cat.name</option>
                    }
                    else
                    {
                        <option value="@cat.Id">@cat.name</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Найти</button>
        </div>
    </form>

    <div class="row">
        @if (!Model.Courses.Any())
        {
            <div class="col-12 text-center">
                <p class="text-muted">Курсы не найдены.</p>
            </div>
        }
        else
        {
            @foreach (var course in Model.Courses)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Action("GetImage", "Courses", new { courseId = course.Id })"
                             class="card-img-top"
                             alt="@course.title"
                             style="height: 200px; object-fit: cover;"
                             onerror="this.src='/img/default-course.jpg';"> <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@course.title</h5>
                            <p class="card-text text-truncate">@course.description</p>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="fw-bold fs-5">@course.price ₽</span>

                                <form asp-action="AddToCart" method="post">
                                    <input type="hidden" name="courseId" value="@course.Id" />
                                    <button type="submit" class="btn btn-success">В корзину</button>
                                </form>
                            </div>

                            <button class="btn btn-outline-info btn-sm mt-2 w-100"
                                    onclick="openCourseDetails('@course.Id')">
                                Подробнее
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<script>
    function openCourseDetails(id) {
        fetch(`/Courses/GetCourseDetails?id=${id}`)
            .then(response => response.json())
            .then(data => {
                // Здесь логика открытия твоего модального окна
                // Например:
                // document.getElementById('modalTitle').innerText = data.title;
                // document.getElementById('modalDesc').innerText = data.description;
                // myModal.show();
                alert("Детали курса:\n" + data.title + "\n" + data.description); // Временная заглушка
            })
            .catch(err => console.error(err));
    }
</script>