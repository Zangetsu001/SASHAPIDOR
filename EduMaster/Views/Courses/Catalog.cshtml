@model EduMaster.Domain.Models.ViewModels.CoursesIndexViewModel
@{
    ViewData["Title"] = "Каталог Курсов";
}
@section Styles {
    <link rel="stylesheet" href="~/css/courses.css" asp-append-version="true" />
}

<div class="container-section">
    <div class="text-center mb-5">
        <h1 class="section-title">Каталог Образовательных Программ</h1>
        <p class="section-description">Найдите идеальный курс для развития своих навыков.</p>
    </div>

    <div class="courses-layout">
        <!-- Sidebar -->
        <aside class="courses-sidebar">
            <div class="filter-card">
                <h3>Категории</h3>
                <div class="category-list">
                    <a asp-action="Catalog" asp-route-search="@Model.Search" class="category-item @(Model.SelectedCategoryId == null ? "active" : "")">
                        <span>Все направления</span><i class="fa fa-th-large"></i>
                    </a>
                    @foreach (var cat in Model.Categories)
                    {
                        <a asp-action="Catalog" asp-route-categoryId="@cat.Id" asp-route-search="@Model.Search" class="category-item @(Model.SelectedCategoryId == cat.Id ? "active" : "")">
                            <span>@cat.name</span><i class="fa fa-angle-right"></i>
                        </a>
                    }
                </div>
            </div>
        </aside>

        <!-- Content -->
        <div class="courses-content">
            <form method="get" asp-action="Catalog" class="search-form mb-4">
                <input type="text" name="search" value="@Model.Search" placeholder="Поиск курса..." />
                @if (Model.SelectedCategoryId.HasValue)
                {
                    <input type="hidden" name="categoryId" value="@Model.SelectedCategoryId" />
                }
                <button type="submit" class="btn-search"><i class="fa fa-search"></i></button>
            </form>

            @if (!Model.SelectedCategoryId.HasValue && string.IsNullOrEmpty(Model.Search))
            {
                <div class="categories-dashboard">
                    @foreach (var cat in Model.Categories)
                    {
                        <a asp-action="Catalog" asp-route-categoryId="@cat.Id" class="cat-dashboard-card">
                            <div class="cat-icon">📚</div>
                            <h3>@cat.name</h3>
                            <p>Перейти <i class="fa fa-arrow-right ms-1"></i></p>
                        </a>
                    }
                </div>
            }
            else
            {
                if (Model.SelectedCategory != null)
                {

                    <h2 class="mb-4">Раздел: <span style="color: #0066cc;">@Model.SelectedCategory.name</span></h2>
                }

                <div class="courses-grid">
                    @foreach (var course in Model.Courses)
                    {
                        <div class="course-card">

                            <!-- КАРТИНКА ГРУЗИТСЯ ИЗ БАЗЫ ДАННЫХ -->
                            <div class="course-img-wrapper">
                                <img src="@Url.Action("GetImage", "Courses", new { courseId = course.Id })"
                                     alt="@course.title"
                                     class="course-img"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />

                                <!-- ЗАГЛУШКА (Если картинки нет в базе) -->
                                <div class="course-placeholder" style="display:none;">
                                    <i class="fa fa-graduation-cap"></i>
                                </div>
                            </div>

                            <div class="course-body">
                                <h3 class="course-title">@course.title</h3>
                                <p class="course-desc">@course.description</p>
                                <div class="course-footer">
                                    <span class="course-price">@course.price.ToString("N0") ₽</span>
                                    <div class="course-actions">
                                        <button class="btn-details" data-id="@course.Id">Инфо</button>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <button class="btn-enroll" data-id="@course.Id">В корзину</button>
                                        }
                                        else
                                        {
                                            <button class="btn-enroll" onclick="openModal()">Вход</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="courseDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="modalCourseTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-2">
                <span class="badge bg-primary mb-3" id="modalCourseCategory"></span>
                <p id="modalCourseDesc" class="text-muted"></p>
                <h3 class="text-end fw-bold text-primary" id="modalCoursePrice"></h3>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/courses_script.js" asp-append-version="true"></script>
}